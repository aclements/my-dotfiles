# Use the Mist theme
include "/usr/share/themes/Mist/gtk-2.0/gtkrc"

# Use Emacs-like key bindings
gtk-key-theme-name = "Emacs"

# We have to specify the font in two ways.  The first is for
# backwards compatibility.
style "user-font"
{
  font_name="Sans 9"
}
widget_class "*" style "user-font"
# And this is for newer applications (ie, Firefox)
gtk-font-name = "Sans 9"

# XFCE panel color scheme

style "panel"
{
  bg[NORMAL] = "black"
  fg[NORMAL] = "white"
  bg[ACTIVE] = "#00aa00"
  fg[ACTIVE] = "white"
}

widget_class "*Panel*" style "panel"
widget "*Panel*" style "panel"
class "*Panel*" style "panel"
